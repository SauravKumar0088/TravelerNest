<% layout('./layouts/boilerplate') %>
<body>
  <h3 style="margin: 2rem;">All listings</h3>
  <!-- <form action="/listings/new" method="GET">
        <button>Add New Listing</button>
        </form> -->
  
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 ">
    <% for(let item of items ){ %>
      <a href="/listings/<%= item.id %>" class="listing-link">
        <div class="card col">
          <img
      src=" <%= item.image %>"
      class="card-img-top"
      alt="listing-image"
      style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= item.title %></b> <hr>
          Price: &#8377; <%= item.price.toLocaleString("en-IN") %> / Night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

</body>
